<div style="background:blueviolet;color:white;padding:10px">Bienvenido {{email}}</div>
<h1>Products</h1>
<br/>
{{#if totalDocs}}
    Products List
    {{#each payload}}
        <ul>
            <li> {{this.title}} - Price: {{this.price}}</li>
            <a href="/products/{{this._id}}">View Details</a>
            <button onclick="addToCart(`{{this._id}}`)">Add To Cart</button>
        </ul>
    {{/each}}
    <div>
        {{#if hasPrevPage}}
            <a href={{prevLink}}> << Prevoius</a>
        {{/if}}
        {{this.page}}
        {{#if hasNextPage}}
            <a href={{nextLink}}>Next >></a>
        {{/if}}
    </div>
{{else}}
    <p>There is no products</p>
{{/if}}
<script src="/js/products.js"></script>

